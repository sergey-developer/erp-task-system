{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "lib": ["lib"],
      "configs": ["configs"],
      "modules": ["modules"],
      "components": ["components"],
      "state": ["state"],
      "shared": ["shared"],
      "styles": ["styles"],
      "app": ["app"],
      "_tests_": ["_tests_"],
      "_fixtures_": ["_fixtures_"]
    }
  },
  "include": ["src"]
}
