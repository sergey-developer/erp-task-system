{
  "name": "itsm-front",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "eject": "craco eject",
    "genapi": "npx @rtk-query/codegen-openapi ./tools/api/openapi.config.ts"
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "@craco/craco": "7.0.0-alpha.3",
    "@reduxjs/toolkit": "^1.8.4",
    "ahooks": "^3.6.2",
    "antd": "^4.20.3",
    "async-mutex": "^0.3.2",
    "axios": "^0.26.1",
    "craco-antd": "^2.0.0",
    "humps": "^2.0.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.3",
    "moment-duration-format": "^2.3.2",
    "qs": "^6.10.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-redux": "^8.0.1",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "styled-components": "^5.3.5",
    "web-vitals": "^2.1.0"
  },
  "devDependencies": {
    "@rtk-query/codegen-openapi": "^1.0.0-alpha.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/humps": "^2.0.1",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.181",
    "@types/moment-duration-format": "^2.2.3",
    "@types/node": "^16.7.13",
    "@types/qs": "^6.9.7",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/styled-components": "^5.1.25",
    "dotenv": "^16.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.8",
    "msw": "^0.45.0",
    "prettier": "^2.6.2",
    "prettier-plugin-sorted": "^2.0.0",
    "typescript": "^4.4.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,css}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "importSort": {
    ".ts, .tsx": {
      "options": {
        "cacheStrategy": "never",
        "extraAliases": [
          "lib",
          "configs",
          "modules",
          "components",
          "state",
          "shared",
          "styles",
          "app",
          "__tests__"
        ],
        "ignoredAliases": [],
        "bottomAliases": []
      }
    }
  },
  "jest": {
    "transformIgnorePatterns": [
      "/node_modules/(?!antd|@ant-design|rc-.+?|@babel/runtime).+(js|jsx|ts|tsx)$"
    ],
    "moduleNameMapper": {
      "^lib(.*)$": "<rootDir>/src/lib/$1",
      "^configs(.*)$": "<rootDir>/src/configs/$1",
      "^modules(.*)$": "<rootDir>/src/modules/$1",
      "^components(.*)$": "<rootDir>/src/components/$1",
      "^state(.*)$": "<rootDir>/src/state/$1",
      "^shared(.*)$": "<rootDir>/src/shared/$1",
      "^app(.*)$": "<rootDir>/src/app/$1"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
