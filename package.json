{
  "name": "itsm-front",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "eject": "craco eject"
  },
  "dependencies": {
    "@craco/craco": "7.0.0-alpha.3",
    "antd": "^4.19.5",
    "lodash": "^4.17.21",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-scripts": "5.0.1",
    "styled-components": "^5.3.5",
    "web-vitals": "^2.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.181",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/styled-components": "^5.1.25",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.8",
    "prettier": "^2.6.2",
    "prettier-plugin-sorted": "^2.0.0",
    "typescript": "^4.4.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "importSort": {
    ".ts, .tsx": {
      "options": {
        "cacheStrategy": "never",
        "extraAliases": [
          "configs",
          "modules",
          "components",
          "state",
          "shared"
        ],
        "ignoredAliases": [],
        "bottomAliases": []
      }
    }
  },
  "jest": {
    "moduleNameMapper": {
      "^configs(.*)$": "<rootDir>/src/configs/$1",
      "^modules(.*)$": "<rootDir>/src/modules/$1",
      "^components(.*)$": "<rootDir>/src/components/$1",
      "^state(.*)$": "<rootDir>/src/state/$1",
      "^shared(.*)$": "<rootDir>/src/shared/$1"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
